# =========================
# –ü–û–ò–°–ö –§–£–ù–ö–¶–ò–ò (–° –û–ü–ï–ß–ê–¢–ö–ê–ú–ò)
# =========================

def find_function(name):
    name = name.lower()
    if name in functions:
        return name
    matches = difflib.get_close_matches(name, functions.keys(), n=1)
    return matches[0] if matches else None

# =========================
# –î–ò–ê–õ–û–ì –° –ü–û–õ–¨–ó–û–í–ê–¢–ï–õ–ï–ú
# =========================

def functions_dialog():
    print("\nüìö –ù–∞–ø–∏—à–∏ –Ω–∞–∑–≤–∞–Ω–∏–µ —Ñ—É–Ω–∫—Ü–∏–∏ Python:")
    user = input(">> ").strip().lower()

    fn = find_function(user)

    if not fn:
        print("‚ùå –Ø –ø–æ–∫–∞ –Ω–µ –∑–Ω–∞—é —Ç–∞–∫—É—é —Ñ—É–Ω–∫—Ü–∏—é.")
        return

    data = functions[fn]

    print(f"\nüîπ –§—É–Ω–∫—Ü–∏—è: {fn}")
    print("üìñ –û–ø–∏—Å–∞–Ω–∏–µ:", data["about"])
    print("‚úçÔ∏è –°–∏–Ω—Ç–∞–∫—Å–∏—Å:", data["syntax"])

    print("\nüìå –ü—Ä–∏–º–µ—Ä—ã:")
    for code, result in data["examples"]:
        print("–ö–æ–¥:", code)
        print("–í—ã–≤–æ–¥:", result)
        print("-" * 20)
