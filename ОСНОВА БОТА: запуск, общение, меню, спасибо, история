print("üêç –ü—Ä–∏–≤–µ—Ç, –º–µ–Ω—è –∑–æ–≤—É—Ç Python –†–µ–ø–µ—Ç–∏—Ç–æ—Ä –ò–ò Mega")
print("–Ø –º–æ–≥—É:")
print("- –æ–±—ä—è—Å–Ω—è—Ç—å Python")
print("- —Ä–µ—à–∞—Ç—å –∑–∞–¥–∞—á–∏")
print("- –≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å –∫–æ–¥")
print("- –æ–±—ä—è—Å–Ω—è—Ç—å –æ—à–∏–±–∫–∏")
print("- —É—á–∏—Ç—å PyCharm")
print("- –æ–±—â–∞—Ç—å—Å—è –∫–∞–∫ —á–µ–ª–æ–≤–µ–∫")

# =======================
# –ò–°–¢–û–†–ò–Ø –ó–ê–ü–†–û–°–û–í
# =======================

history = []

def remember(text):
    history.append(text)

def show_history():
    print("\nüìú –ò—Å—Ç–æ—Ä–∏—è –∑–∞–ø—Ä–æ—Å–æ–≤:")
    if not history:
        print("–ü–æ–∫–∞ –ø—É—Å—Ç–æ.")
    else:
        for i, h in enumerate(history, 1):
            print(i, h)

# =======================
# –ß–ï–õ–û–í–ï–ß–ï–°–ö–ò–ï –û–¢–í–ï–¢–´
# =======================

import random

thanks_words = [
    "—Å–ø–∞—Å–∏–±–æ", "—Å–ø—Å", "–±–ª–∞–≥–æ–¥–∞—Ä—é", "thanks", "thx", "–ø–∞—Å–∏–±–∞"
]

thanks_answers = [
    "–ü–æ–∂–∞–ª—É–π—Å—Ç–∞! –†–∞–¥ —Å—Ç–∞—Ä–∞—Ç—å—Å—è üòä",
    "–û—á–µ–Ω—å —Ä–∞–¥, —á—Ç–æ –ø—Ä–∏–≥–æ–¥–∏–ª–æ—Å—å!",
    "–û–±—Ä–∞—â–∞–π—Å—è, –≤—Å–µ–≥–¥–∞ –ø–æ–º–æ–≥—É üëç",
    "–†–∞–¥, —á—Ç–æ –ø–æ–º–æ–≥ —Ç–µ–±–µ —Å Python üêç",
    "–í—Å–µ–≥–¥–∞ —Ä–∞–¥ –ø–æ–º–æ—á—å!"
]

def check_thanks(text):
    text = text.lower()
    for w in thanks_words:
        if w in text:
            print(random.choice(thanks_answers))
            return True
    return False

# =======================
# –ò–°–ü–†–ê–í–õ–ï–ù–ò–ï –û–ü–ï–ß–ê–¢–û–ö
# =======================

typos = {
    "–∫–∞–¥": "–∫–æ–¥",
    "–∫–¥": "–∫–æ–¥",
    "—Ñ—É–Ω—Ü–∏—è": "—Ñ—É–Ω–∫—Ü–∏—è",
    "—Ñ—É–Ω–∫—Ü–∏—è—è": "—Ñ—É–Ω–∫—Ü–∏—è",
    "–ø–∏—Ç–æ–Ω": "python",
    "–≤—ã–≤–µ–¥–∏": "–≤—ã–≤–µ—Å—Ç–∏",
    "–ø–µ—Ä–µ–º–µ–Ω—ã": "–ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ",
    "—Ü—ã–∫–ª": "—Ü–∏–∫–ª"
}

def fix_typos(text):
    words = text.split()
    fixed = []
    for w in words:
        fixed.append(typos.get(w, w))
    return " ".join(fixed)

# =======================
# –†–ê–ó–ì–û–í–û–†–ù–´–ï –§–†–ê–ó–´
# =======================

def say(text):
    print("ü§ñ", text)

def talk_start():
    say("–Ø —Å–ª—É—à–∞—é —Ç–µ–±—è.")

# =======================
# –ú–ï–ù–Æ
# =======================

def menu():
    print("\nüß† –ß—Ç–æ —Ç—ã —Ö–æ—á–µ—à—å —Å–¥–µ–ª–∞—Ç—å?")
    print("—Ñ—É–Ω–∫—Ü–∏–∏")
    print("–æ—à–∏–±–∫–∏")
    print("–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å")
    print("—Ä–µ—à–∏—Ç—å –∑–∞–¥–∞—á—É")
    print("–æ–±—ä—è—Å–Ω–∏—Ç—å –∫–æ–¥")
    print("pycharm")
    print("–∏—Å—Ç–æ—Ä–∏—è –∑–∞–ø—Ä–æ—Å–æ–≤")
    print("–≤—ã—Ö–æ–¥")

# =======================
# –ó–ê–ì–õ–£–®–ö–ò (–ü–û–ö–ê)
# =======================

def functions_dialog():
    say("–ë–∞–∑–∞ —Ñ—É–Ω–∫—Ü–∏–π –±—É–¥–µ—Ç –∑–∞–≥—Ä—É–∂–µ–Ω–∞ –ø–æ–∑–∂–µ.")

def errors_dialog():
    say("–ë–∞–∑–∞ –æ—à–∏–±–æ–∫ –±—É–¥–µ—Ç –∑–∞–≥—Ä—É–∂–µ–Ω–∞ –ø–æ–∑–∂–µ.")

def generate_dialog():
    say("–ì–µ–Ω–µ—Ä–∞—Ç–æ—Ä –∫–æ–¥–∞ –±—É–¥–µ—Ç –∑–∞–≥—Ä—É–∂–µ–Ω –ø–æ–∑–∂–µ.")

def solve_task_dialog():
    say("–ò–ò-—Ä–µ—à–µ–Ω–∏–µ –∑–∞–¥–∞—á –±—É–¥–µ—Ç –∑–∞–≥—Ä—É–∂–µ–Ω–æ –ø–æ–∑–∂–µ.")

def explain_code_dialog():
    say("–û–±—ä—è—Å–Ω–µ–Ω–∏–µ –∫–æ–¥–∞ –±—É–¥–µ—Ç –∑–∞–≥—Ä—É–∂–µ–Ω–æ –ø–æ–∑–∂–µ.")

def pycharm_dialog():
    say("–û–±—É—á–µ–Ω–∏–µ PyCharm –±—É–¥–µ—Ç –∑–∞–≥—Ä—É–∂–µ–Ω–æ –ø–æ–∑–∂–µ.")

# =======================
# –ì–õ–ê–í–ù–´–ô –¶–ò–ö–õ
# =======================

while True:
    menu()
    user_input = input(">> ")
    user_input = fix_typos(user_input)
    remember(user_input)

    if check_thanks(user_input):
        continue

    cmd = user_input.lower()

    if "—Ñ—É–Ω–∫—Ü" in cmd:
        functions_dialog()
    elif "–æ—à–∏–±" in cmd:
        errors_dialog()
    elif "–≥–µ–Ω–µ—Ä" in cmd:
        generate_dialog()
    elif "—Ä–µ—à" in cmd:
        solve_task_dialog()
    elif "–æ–±—ä—è—Å" in cmd:
        explain_code_dialog()
    elif "pycharm" in cmd:
        pycharm_dialog()
    elif "–∏—Å—Ç–æ—Ä" in cmd:
        show_history()
    elif "–≤—ã—Ö–æ–¥" in cmd:
        say("–ü–æ–∫–∞! –£—á–∏—Ç—å Python —Å —Ç–æ–±–æ–π –±—ã–ª–æ –∫—Ä—É—Ç–æ üíô")
        break
    else:
        say("–Ø –ø–æ–∫–∞ –Ω–µ –ø–æ–Ω—è–ª, –Ω–æ —Å–∫–æ—Ä–æ —Å—Ç–∞–Ω—É —É–º–Ω–µ–µ üôÇ")
